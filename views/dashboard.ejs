<%- include('partials/header') %>

<header class="main-header">
    <div class="header-title">
        <img src="/logo.png" alt="Logo" class="header-logo">
        <h1>BMS Institute of Technology & Management</h1>
    </div>
    <nav>
        <a href="/new-notice" class="btn btn-primary">Post New Notice</a>
        <a href="/logout" class="btn btn-secondary">Logout</a>
    </nav>
</header>

<main class="dashboard">
    <div class="fixed-sections-grid">
        <!-- Vision & Mission Section (Always First) -->
        <div class="section-card vision-mission-section">
            <div class="section-content">
                <% if (visionMissionNotice) { %>
                    <div class="notice-card static-notice">
                        <div class="vision-mission-content">
                            <div class="vision-mission-text">
                                <div class="vision-box">
                                    <p><strong>Vision</strong><br>
                                    To emerge as one of the finest technical institutions of higher learning, to develop engineering professionals who are technically competent, ethical and environment friendly for betterment of the society.</p>
                                </div>
                                <div class="mission-box">
                                    <p><strong>Mission</strong><br>
                                    Accomplish stimulating learning environment through high quality academic instruction, innovation and industry-institute interface.</p>
                                </div>
                            </div>
                            <div class="founders-images">
                                <div class="founder">
                                    <img src="/BMSreenivasaiah.jpg" alt="" class="founder-image">
                                    <p class="founder-name">B.M. Sreenivasaiah</p>
                                </div>
                                <div class="founder">
                                    <img src="/BSNarayan.jpg" alt="" class="founder-image">
                                    <p class="founder-name">B.S. Narayan</p>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <p class="no-notices">Vision & Mission content not available</p>
                <% } %>
            </div>
        </div>

        <!-- Announcement Section -->
        <div class="section-card announcement-section">
            <div class="section-header">
                <h2>Announcements</h2>
            </div>
            <div class="section-content">
                <% if (sectionNotices.announcement && sectionNotices.announcement.length > 0) { %>
                    <% sectionNotices.announcement.forEach(notice => { %>
                        <div class="notice-card">
                            <div class="card-header">
                                <h3><%= notice.title %></h3>
                                <form action="/delete-notice/<%= notice.id %>" method="POST" style="display: inline;">
                                    <button type="submit" class="delete-btn" title="Delete Notice">&times;</button>
                                </form>
                            </div>
                            <p class="notice-meta">By <%= notice.author %> on <%= notice.date %></p>
                            <% if (notice.deadline && typeof notice.deadline === 'string') { 
                                var dateParts = notice.deadline.split('-');
                                var formattedDate = dateParts[2] + '/' + dateParts[1] + '/' + dateParts[0];
                            %>
                                <p class="notice-date">Date: <%= formattedDate %></p>
                            <% } %>
                            <div class="notice-content">
                                <p><%= notice.content.replace(/\n/g, '<br>') %></p>
                                <% if (notice.image_filename) { %>
                                    <img src="/uploads/<%= notice.image_filename %>" alt="<%= notice.title %>" class="notice-image">
                                <% } %>
                                <% if (notice.pdf_filename) { %>
                                    <a href="/uploads/<%= notice.pdf_filename %>" target="_blank" class="pdf-link">View PDF</a>
                                <% } %>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="no-notices">No announcements</p>
                <% } %>
            </div>
        </div>

